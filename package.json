{
  "private": true,
  "name": "node-typescript",
  "version": "1.0.0",
  "scripts": {
    "build": "webpack",
    "dev": "nodemon src/index.ts",
    "dev:dewatch": "dewatch src/index.ts",
    "dev:debug": "nodemon --inspect=5858 src/index.ts",
    "fmt": "prettier --write '**/*.{js,ts}'",
    "fmt:p": "prettier-package-json --write",
    "prod": "npm run build && node dist/index.js",
    "test": "jest --no-cache"
  },
  "dependencies": {
    "@types/jest": "24.0.11",
    "awesome-typescript-loader": "5.2.1",
    "canvas": "2.5.0",
    "chart.js": "2.8.0",
    "chartjs-node": "1.7.1",
    "clean-webpack-plugin": "2.0.1",
    "friendly-errors-webpack-plugin": "1.7.0",
    "jest": "24.5.0",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "prettier-package-json": "2.1.0",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.3",
    "typescript": "3.3.4000",
    "webpack": "4.29.6",
    "webpack-cli": "3.3.0",
    "winston": "3.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
